{{#if posts.length}}
    <div class="d-flex justify-content-between animate__flipInX">
        <h2 class="allPost">All Posts</h2>
        <p class="sorted"><a href='/homepage/usersort'>sort by user</a> | <a href='/'>sort by date</a></p>
    </div>
    <p class="go-to-dash"><a href="/dashboard">Go to Dashboard</a></p>

    {{#each posts as |post|}}

        <div class="card p-2 m-2 rounded animate__animated animate__flipInX">
            <div class="card-body">
                {{> post-data post }}

                {{!-- <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a> --}}

            </div>
        </div>

    {{/each}}
{{/if}}