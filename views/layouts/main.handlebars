          <button id="logout" class="btn-link">logout</button> | 
          {{else}}
          <a href="/login">login</a> | 
          {{/if}}
          <a href="/homepage">home</a> |
          <a href="/dashboard">dashboard</a>
        </nav>
      </div>



    </header>
    <main>
        <div class="container">
            <div class="row">
                {{{ body }}}
            </div>
        </div>
    </main>




</div>


