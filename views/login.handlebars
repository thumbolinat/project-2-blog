<section class="container py-5">
    <div class="row row-cols-1 row-cols-sm-1 row-cols-md-2 g-4 justify-content-center text-center">
        <div class="col animate__animated animate__flipInX">
            <div class="log bg-light border p-3">
                <form class="login-form">
                    <h2 class="mb-3 pb-3">Log In</h2>
                    <div class="form-outline mb-4">
                        <input type="text" id="username-login" class="form-control form-control-lg"
                               placeholder="Username"/>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="password-login" class="form-control form-control-lg"
                               placeholder="Password"/>
                    </div>
                    <div class="pt-1 mb-4">
                        <button class="btn btn-dark btn-lg btn-block" type="submit">Login</button>
                    </div>
                </form>
            </div>
        </div>

        <div class="col animate__animated animate__flipInX">
            <div class="log bg-light border p-3">
                <form class="signup-form">
                    <h2 class="mb-3 pb-3">Sign Up</h2>
                    <div class="form-outline mb-4">
                        <input type="text" id="username-signup" class="form-control form-control-lg"
                               placeholder="Username"/>
                    </div>
                    <div class="form-outline mb-4">
                        <input type="password" id="password-signup" class="form-control form-control-lg"
                               placeholder="Password"/>
                    </div>
                    <div class="pt-1 mb-4">
                        <button class="btn btn-info btn-lg btn-block" type="submit">Signup</button>
                        
                    </div>
                </form>
            </div>

    </section>

        </div>
    </div>
</section>


<script src="/javascript/login.js"></script>











