<div class="comments animate__animated animate__flipInX">
  {{#each this}}
  <section class="comment animate__animated animate__flipInX">
    <div class="meta">
      {{user.username}} on {{format_date created_at}}
    </div>
    <div class="comment-text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>